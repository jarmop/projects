{
  "name": "angular2-quickstart",
  "version": "1.0.0",
  "scripts": {
    "clean": "rm -rf app && mkdir -p app/component",
    "build": "concurrently \"npm run clean\" \"npm run tsc\" \"npm run vendor\" \"npm run css\" \"npm run html\" ",
    "start": "concurrently \"npm run clean\" \"npm run build\" \"npm run watch\" \"npm run lite\" ",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "lite": "lite-server",
    "typings": "typings",
    "postinstall": "typings install",
    "css": "cp source/*.css app",
    "html": "cp source/*.html app && cp source/component/*.html app/component",
    "vendor": "./node_modules.sh",
    "watch": "watch 'npm run build' source --wait 2"
  },
  "license": "ISC",
  "dependencies": {
    "angular2": "2.0.0-beta.12",
    "systemjs": "0.19.24",
    "es6-shim": "^0.35.0",
    "reflect-metadata": "0.1.2",
    "rxjs": "5.0.0-beta.2",
    "zone.js": "0.6.6"
  },
  "devDependencies": {
    "concurrently": "^2.0.0",
    "lite-server": "^2.1.0",
    "typescript": "^1.8.9",
    "typings": "^0.7.9",
    "uglify-js": "^2.6.2",
    "watch": "^0.17.1"
  }
}
